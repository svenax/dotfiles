[alias]
        br = branch
        ci = commit
        cia = commit -a --amend --no-edit
        co = checkout
        g = grep --break --heading --line-number
        mr = !~/bin/git-mr
        pick = cherry-pick
        pickt = cherry-pick --strategy=recursive -X theirs
        pullall = !~/bin/git-pullall.sh
        pullo = pull -s recursive -X ours
        pullr = pull --rebase --autostash
        pullt = pull --strategy=recursive -X theirs
        pushf = push --force-with-lease
        rebase-merge = !~/bin/git-rebase-via-merge.sh
        st = status
        unstash = stash pop
        # Logs
        changed = "!sh -c 'git log --name-only --pretty=\"%%\" \"$@\" | sort -u | sed \"1,2d\"' -"
        glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
        new = !sh -c 'git log $1@{1}..$1@{0} "$@"'
        olog = log --oneline
        sdiff = log -p --no-walk
        slog = log --pretty="format:'%C(yellow)%h%Creset %ar by %an: %s'"
[user]
	name = Sven Axelsson
	email = sven.axelsson@kvdbil.se
	# email = himself@svenax.net
[core]
	excludesfile = ~/.config/git/ignore
        precomposeunicode = true
        quotepath = off
        whitespace = cr-at-eol
        pager = /usr/bin/less
[color]
        branch = auto
        diff = auto
        status = auto
        ui = auto
[color "branch"]
        current = bold
        remote = yellow
[diff]
        tool = kaleidoscope
[difftool]
        prompt = false
[merge]
	tool = kaleidoscope
[mergetool]
        keepBackup = true
        prompt = false
[push]
        default = current
[rerere]
	enabled = true
[tag]
	forceSignAnnotated = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
