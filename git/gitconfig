[alias]
        br = branch
        ci = commit
        cia = commit -a --amend --no-edit
        co = checkout
        delete-merged-branches = !sh -c 'git branch --merged master | grep -v master | xargs -n 1 git branch -d'
        g = grep --break --heading --line-number
        mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -
        pullall = !~/bin/git-pullall.sh
        pullo = pull -s recursive -X ours
        pullr = pull --rebase --autostash
        pullt = pull -s recursive -X theirs
        pushf = push --force
        st = status
        subrm = !~/bin/git-subrm.sh
        subup = submodule foreach 'git pull -s recursive -X theirs'
        unstash = stash pop
        wtf = !~/bin/git-wtf
        # Flow
        ff = flow feature
        fh = flow hotfix
        fr = flow release
        # Logs
        changed = "!sh -c 'git log --name-only --pretty=\"%%\" \"$@\" | sort -u | sed \"1,2d\"' -"
        glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
        new = !sh -c 'git log $1@{1}..$1@{0} "$@"'
        olog = log --oneline
        sdiff = log -p --no-walk
        slog = log --pretty="format:'%C(yellow)%h%Creset %ar by %an: %s'"
        snew = !sh -c 'git slog $1@{1}..$1@{0} "$@"'
        touches = log --name-only --no-walk
[user]
	name = Sven Axelsson
	email = sven@axelsson.expert
[core]
	excludesfile = /Users/sven/.gitignore_global
        precomposeunicode = true
        quotepath = off
        whitespace = cr-at-eol
        pager = /usr/bin/less
[color]
        branch = auto
        diff = auto
        status = auto
        ui = auto
[color "branch"]
        current = bold
        remote = yellow
[diff]
        tool = araxis
[difftool]
        prompt = false
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[merge]
	tool = araxis
[mergetool]
        keepBackup = true
        prompt = false
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
        default = current
[rerere]
        enabled = true
[filter "lfs"]
        clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
        required = true
[commit]
	template = /Users/sven/.stCommitMsg
